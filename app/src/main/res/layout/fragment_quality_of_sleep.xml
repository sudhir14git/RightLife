<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How would you describe the usual quality of your sleep?"
        android:textSize="@dimen/textsize_large18sp"
        android:fontFamily="@font/merriweather_bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/menu_icon_color_unselected" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide the scale to select."
        android:textSize="14sp"
        android:fontFamily="@font/dmsans_regular"
        android:textColor="@color/txt_color_header"
        android:layout_marginBottom="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_water"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">


        <com.jetsynthesys.rightlife.quiestionscustomviews.TempCapillaryAnxietyLevelView
            android:id="@+id/sleep_quality_slider_view"
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:layout_height="350dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignTop="@+id/sleep_quality_slider_view"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/sleep_quality_slider_view"
            android:orientation="vertical">


            <TextView
                android:id="@+id/anxiety_level_text_5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:gravity="top"
                android:text="Excellent" />

            <TextView
                android:id="@+id/anxiety_level_text_4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:gravity="top"
                android:text="Good" />

            <TextView
                android:id="@+id/anxiety_level_text_3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:gravity="top"
                android:text="Average" />

            <TextView
                android:id="@+id/anxiety_level_text_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:gravity="top"
                android:text="Poor" />

            <TextView
                android:id="@+id/anxiety_level_text_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:gravity="top"
                android:text="Very poor" />
        </LinearLayout>


        <!--         recomended steps view -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignTop="@+id/sleep_quality_slider_view"
            android:gravity="center"
            android:layout_toEndOf="@id/sleep_quality_slider_view"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:paddingBottom="20dp"
                android:src="@drawable/ic_exellent"
                android:gravity="top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"

                android:src="@drawable/ic_good"
                android:paddingBottom="20dp"
                android:gravity="top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"

                android:src="@drawable/ic_average"
                android:paddingBottom="20dp"
                android:gravity="top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"

                android:src="@drawable/ic_poor"
                android:paddingBottom="20dp"
                android:gravity="top" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:src="@drawable/ic_very_poor"
                android:paddingBottom="20dp"
                android:gravity="top" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/menuselected"
            android:fontFamily="@font/dmsans_bold"
            android:text="@string/str_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
