<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/trialEnds"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_download_pastsub"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvCurrentPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="8dp"
            android:background="@drawable/roundedcornershape"
            android:backgroundTint="@color/color_green"
            android:fontFamily="@font/dmsans_bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:text="Current Plan"
            android:textColor="@color/chip_selected_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/planName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="8dp"
            android:layout_toLeftOf="@+id/tvCurrentPlan"
            android:fontFamily="@font/dmsans_bold"
            android:text="Annual Plan"

            android:textColor="@color/txt_color_mind"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/planDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planName"
            android:fontFamily="@font/dmsans_regular"
            android:text="Subscription"
            android:textColor="@color/txt_color_health"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPlanAmmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/planDescription"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="â‚¹3499"
            android:textColor="@color/txt_color_mind"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/trialEnds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPlanAmmount"
            android:fontFamily="@font/dmsans_regular"
            android:text="Valid Till 10 Mar 0000"
            android:textColor="@color/gray_past_price"
            android:textSize="@dimen/textsize_small" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>