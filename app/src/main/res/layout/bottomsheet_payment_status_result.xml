<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- Optional: for rounded corners -->

    <!-- This LinearLayout groups the image and text and allows us to center them together -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginVertical="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- The green checkmark image -->
        <ImageView
            android:id="@+id/img_payment_status"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/right_tick_data_exported" /> <!-- Make sure you have this drawable -->

        <!-- The "Payment Successful" text -->
        <TextView
            android:id="@+id/tv_payment_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Payment Successful"
            android:textColor="@color/black_plain"
            android:textSize="@dimen/textsize_large24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
