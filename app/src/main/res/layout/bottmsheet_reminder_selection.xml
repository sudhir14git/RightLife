<!-- res/layout/bottom_sheet_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/toproundedcornershape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close_dialog_affirmation" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dmsans_bold"
            android:text="Set Your Reminder"
            android:textColor="@color/txt_color_header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dmsans_bold"
            android:text="Select &amp; Set Time"
            android:textColor="@color/txt_color_header"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/titleText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/subTitleText">

            <LinearLayout
                android:id="@+id/llMorningRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Morning"
                    android:clickable="false"
                    android:textColor="@color/txt_color_header"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMorningTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_time_picker"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="false"
                android:padding="8dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="9:00 AM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAfternoonRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioAfternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Afternoon"
                    android:clickable="false"
                    android:textColor="@color/txt_color_header"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAfternoonTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_time_picker"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="false"
                android:padding="8dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeAfternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="1:00 PM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEveningRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioAEvening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="Evening"
                    android:clickable="false"
                    android:textColor="@color/txt_color_header"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEveningTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_time_picker"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="false"
                android:padding="8dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeEvening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="8:00 PM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your chosen time, your chosen way"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp"
                android:textColor="@color/txt_color_header"/>

            <Button
                android:id="@+id/btnSetReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:text="Set Reminder"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/menuselected"
                android:layout_alignParentBottom="true"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
