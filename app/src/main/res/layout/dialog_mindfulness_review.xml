<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/record_emotion_bg">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/close"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Mindfulness Review"
        android:textColor="@color/eatright_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_close"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/record_emotion_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/img_ideal_sleep"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:src="@drawable/mindfullness"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What It Tracks"
        android:layout_marginTop="5dp"
        android:textColor="@color/eatright_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Your Mindfulness Review section provides a simple yet insightful summary of your mindfulness habits, focusing on:"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Mindful Minutes – Total time spent engaging with mindfulness tools"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Days Practiced – The number of days you actively used any mindfulness tool"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Why It Matters Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why It Matters"
        android:textColor="@color/eatright_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regular mindfulness practice can improve mental clarity, emotional resilience, and overall well-being. This review helps you track consistency and progress without overwhelming you with excessive details."
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- How It Works Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How It Works"
        android:textColor="@color/eatright_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Mindful Minutes are automatically logged when you use any mental wellness feature"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Days Practiced reflects how often you engage with mindfulness tools across the week"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- How to Use Your Insights Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Use Your Insights"
        android:textColor="@color/eatright_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Aim to increase consistency by practicing mindfulness on more days"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Use Mindful Minutes to understand your time dedication"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• If you're just starting, begin with short daily sessions"
        android:textColor="@color/black"
        android:paddingBottom="30dp"
        android:layout_marginBottom="16dp"/>

    <!-- Got It Button -->
    <Button
        android:id="@+id/got_it"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="GOT IT"
        android:visibility="gone"
        android:backgroundTint="@color/eatright_text_color"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
       />

</LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>