<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_food_item"
    android:gravity="center">

    <!-- Close Button (Top Right) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're Logged In with a Different Account"
            android:fontFamily="@font/dmsans_bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/margin_card_16dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/txt_color_header" />


    </RelativeLayout>

    <!-- Body -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_regular"
        android:layout_marginTop="16dp"
        android:textColor="@color/txt_color_header"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/margin_card_16dp"
        android:text="This device is already logged in with a different account. As a result, free services are not available.\n\nPlease log out and sign in with your original account to access free features." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_card_16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textColor="@android:color/black"

            app:cornerRadius="1dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitchAccount"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch Account"
            android:backgroundTint="#3B82F6"
            app:cornerRadius="10dp" />

    </LinearLayout>

</LinearLayout>
