<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">
        <!-- Score Indicator -->
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <!-- Score Category -->
        <TextView
            android:id="@+id/tvScoreCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />
        <!-- Score List View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tvMinimal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/green"
                android:text="Minimal"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvMild"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/yellow"
                android:text="Mild"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvModerate"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/blue_bar"
                android:text="Moderate"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvSevere"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/red"
                android:text="Severe"
                android:gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvExtSevere"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/red"
                android:text="Ext Severe"
                android:gravity="center"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>