<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sleep_perform_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sleep_back_icon"
            android:id="@+id/img_back"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Performance"
            android:textSize="22sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/sleep_text_color"
            android:layout_marginBottom="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="70dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/calorie_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="30dp"
                    android:layout_height="match_parent">
                    <RadioGroup
                        android:id="@+id/tabGroup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/tab_background_sleep"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <RadioButton
                            android:id="@+id/rbWeek"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Week"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:background="@drawable/tab_background_sleep"
                            android:gravity="center"
                            android:button="@null"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/rbMonth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Month"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/tab_background_sleep"
                            android:gravity="center"
                            android:button="@null"/>

                        <RadioButton
                            android:id="@+id/rbSixMonths"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="6 Months"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/tab_background_sleep"
                            android:gravity="center"
                            android:button="@null"/>
                    </RadioGroup>

                    <ImageView
                        android:id="@+id/btn_prev"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/sleep_right_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tabGroup" />
                    <ImageView
                        android:id="@+id/btn_next"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="21dp"
                        android:src="@drawable/sleep_go_right_icon"
                        android:layout_marginTop="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tabGroup"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Feb -9 Feb, 2O25"
                        android:id="@+id/tv_selected_date"
                        android:fontFamily="@font/dmsans_bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
                        app:layout_constraintStart_toEndOf="@+id/btn_prev"
                        app:layout_constraintEnd_toStartOf="@+id/btn_next"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/border_line"
                        android:layout_marginTop="18dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_prev"/>
                    <TextView
                        android:id="@+id/average_text_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="108dp"
                        android:layout_marginStart="21dp"
                        android:text="Average"
                        android:textSize="12sp"
                        android:fontFamily="@font/dmsans_bold"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tv_sleep_perform_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78%"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="@font/dmsans_bold"
                        android:layout_marginStart="21dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/average_text_heading"/>
                    <ImageView
                        android:id="@+id/percentage_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:visibility="gone"
                        android:src="@drawable/green_up_icon"
                        android:layout_marginStart="21dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sleep_perform_average"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/percentage_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50% past week"
                        android:visibility="gone"
                        android:textSize="10sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/green_text"
                        app:layout_constraintBottom_toBottomOf="@+id/percentage_icon"
                        app:layout_constraintStart_toEndOf="@+id/percentage_icon"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_percent"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:visibility="gone"
                        android:background="@drawable/white_meal_date_bg"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toBottomOf="@id/percentage_text"
                        app:layout_constraintEnd_toEndOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_bar_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9 Feb, 2025"
                                android:textSize="10sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>
                            <TextView
                                android:id="@+id/tv_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="24sp"
                                android:textColor="@color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_bar_date"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:id="@+id/percent_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textSize="10sp"
                                android:layout_marginStart="4dp"
                                android:textColor="@color/green_text"
                                app:layout_constraintTop_toTopOf="@+id/tv_percent"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_percent"
                                app:layout_constraintStart_toEndOf="@+id/tv_percent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/card_percent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/lyt_chart">
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/heartRateChart"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:layout_marginTop="10dp"
                            android:padding="3dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyt_line_chart"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:padding="16dp">

                            <!-- Line Chart -->
                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/heartLineChart"
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:background="@android:color/white" />

                            <!-- Overlay for Red & Green Strips -->
                            <FrameLayout
                                android:id="@+id/stripsContainer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </FrameLayout>

                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_bold"
                android:layout_marginTop="25dp"
                android:id="@+id/perform_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/calorie_balance_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_bold"
                android:layout_marginTop="15dp"
                android:id="@+id/perform_subTitle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/perform_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/perform_message"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:fontFamily="@font/dmsans_regular"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/perform_subTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>