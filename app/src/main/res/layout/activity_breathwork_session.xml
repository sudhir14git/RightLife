<!-- res/layout/activity_breathwork_session.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ic_breathing_toolkit" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="250dp">
            <!-- Breathwork Image -->
            <ImageView
                android:id="@+id/ivBreathworkImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/breathing_equal" />
        </RelativeLayout>

        <!-- Title & Description -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnContinue"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Equal Breathing"
                    android:textColor="@color/text_color_breathwork"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_breathwork"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:textSize="14sp" />

                <!-- Session Sets -->

                <LinearLayout
                    android:id="@+id/layoutCustomPicker"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="visible"
                    android:padding="16dp">

                    <!-- Inhale -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:text="Inhale\n(Seconds)"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_breathwork"/>

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/pickerInhale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:np_textSize="@dimen/textsize_small"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Hold -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:text="Hold\n(Seconds)"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_breathwork"/>

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/pickerHold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:np_textSize="@dimen/textsize_small"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Exhale -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:text="Exhale\n(Seconds)"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_breathwork"/>

                        <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/pickerExhale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:np_textSize="@dimen/textsize_small"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Session Sets"
                        android:id="@+id/tvSessionSets"
                        android:textColor="@color/text_color_breathwork"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:src="@drawable/ic_minus_sign"
                        android:padding="15dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/tvSessionCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:text="3"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_shape"
                        android:src="@drawable/ic_plus_sign"
                        android:padding="15dp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSetInfo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="1 set = 4 breath cycles "
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color_breathwork" />

                    <TextView
                        android:id="@+id/tvSettime"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="15:09 mins"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color_breathwork" />
                </LinearLayout>


                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <!-- Haptic Feedback Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHaptic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Haptic Feedback"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_breathwork"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchHaptic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <!-- Continue Button -->


            <Button
                android:id="@+id/btnContinue"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#FFDD80"
                android:text="Continue"
                android:textColor="@color/text_color_breathwork" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>