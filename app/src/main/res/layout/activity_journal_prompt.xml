<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_color_journal">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_articlepage" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="24dp"
            android:padding="3dp"
            android:layout_height="24dp"
            android:src="@drawable/info_affirmation" />
    </LinearLayout>

    <!-- Title -->

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweather_bold"
        android:paddingHorizontal="@dimen/margin_card_16dp"
        android:text="Choose a prompt"
        android:textColor="@color/txt_color_mind"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Each question is here to help you process, remember, and heal - one step at a time."
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_regular"
        android:paddingHorizontal="@dimen/margin_card_16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/txt_color_journal_gray" />

    <!-- Horizontal Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="5dp"
            app:chipSpacingHorizontal="10dp"
            app:chipSpacingVertical="10dp"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true" />
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPrompts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:clipToPadding="false" />
</LinearLayout>
