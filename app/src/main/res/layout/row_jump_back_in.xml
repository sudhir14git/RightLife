<!-- res/layout/grid_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorTransperent"
    android:layout_marginHorizontal="8dp"
    android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="24dp"
            android:background="@color/colorTransperent"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facial_scan" />

                <LinearLayout
                    android:id="@+id/llVideoSeries"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:padding="12dp"
                    android:background="#BF000000">

                    <ImageView
                        android:id="@+id/img_iconview"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/video_jump_back_in" />

                    <TextView
                        android:id="@+id/item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="video"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dmsans_regular"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_above="@id/llVideoSeries"
                    android:max="100"
                    android:progress="10"
                    android:backgroundTint="@color/white"
                    android:progressDrawable="@drawable/rounded_progress_bar_jump_back_in" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Daily Habits to Boost Your Health, Energy, and Mood Without Changing Your Entire Routine"
            android:textColor="@color/txt_color_journal_date"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/merriweather_bold" />

        <TextView
            android:id="@+id/tvDurationLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1min left"
            android:layout_marginTop="2dp"
            android:textColor="@color/active_text_color"
            android:textSize="12sp"
            android:fontFamily="@font/dmsans_regular" />
    </LinearLayout>
