<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How colorful is your plate when it comes to fruits and vegetables?"
        android:textSize="@dimen/textsize_large18sp"
        android:fontFamily="@font/merriweather_bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/menu_icon_color_unselected" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewServing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rlpage_info_icon"
            android:layout_marginEnd="8dp"
            app:tint="@color/questionnaire_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="If you had roti and sabzi for lunch, that portion of sabzi (250g) is considered as 1 serving of vegetables in a day."
            android:textSize="12sp"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/txt_color_header"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/menuselected"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"/>

</LinearLayout>
