<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/roundedcornershape"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Step Circle -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle"
        android:text="4"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginBottom="12dp"
        android:layout_centerInParent="true"/>

    <!-- Close Button -->
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_breathwork"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter The OTP Below"
        android:textSize="22sp"
        android:fontFamily="@font/dmsans_bold"
        android:layout_marginTop="8dp" />

    <!-- Subheading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the six digit code sent to"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_regular"/>

    <!-- Phone Number and Change -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+91 1234567890"
            android:textSize="14sp"
            android:textColor="@color/txt_color_header"
            android:fontFamily="@font/dmsans_bold"/>

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/underlined_change"
            android:textSize="14sp"
            android:textColor="@color/txt_color_header"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <!-- OTP Inputs -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_otp1"
            style="@style/OtpEditTextStyle" />

        <EditText
            android:id="@+id/et_otp2"
            style="@style/OtpEditTextStyle"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/et_otp3"
            style="@style/OtpEditTextStyle"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/et_otp4"
            style="@style/OtpEditTextStyle"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/etOtp5"
            style="@style/OtpEditTextStyle"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/etOtp6"
            style="@style/OtpEditTextStyle"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Verification Result -->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(OTP sent)"
        android:textSize="10sp"
        android:layout_margin="8dp" />

    <!-- Verify Button -->
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Verify"
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/menuselected" />

    <Button
        android:id="@+id/tv_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Resend OTP"
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_bold"
        android:textColor="@color/rightlife"
        android:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/tvResendCounter"
        android:text="(60s)"
        android:textSize="@dimen/textsize_large18sp"
        android:textColor="@color/menuselected"
        android:gravity="center"
        android:fontFamily="@font/dmsans_bold"
        android:layout_width="match_parent"
        android:enabled="false"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
