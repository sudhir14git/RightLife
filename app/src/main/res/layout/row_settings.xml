<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_mind"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="@dimen/textsize_large"
                android:text="Title" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/active_text_color"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp"
                android:text="Title"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/llPlansDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:fontFamily="@font/dmsans_semibold"
                    android:textColor="@color/txt_color_header"
                    android:background="@drawable/bg_light_red_border"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Annual"
                    android:fontFamily="@font/dmsans_semibold"
                    android:textColor="@color/txt_color_header"
                    android:background="@drawable/bg_light_red_border"
                    android:layout_marginHorizontal="8dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/next_arrow_settings" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
