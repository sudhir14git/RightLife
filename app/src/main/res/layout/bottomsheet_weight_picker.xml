<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="24dp">

    <RelativeLayout
        android:id="@+id/rl_switch"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp">

        <LinearLayout
            android:id="@+id/toggleContainer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/kgOption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="kg"
                android:fontFamily="@font/dmsans_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_left_unselected" />

            <TextView
                android:id="@+id/lbsOption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="lbs"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_right_selected" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60.0 kg"
        android:textSize="34sp"
        android:textColor="@color/text_color_app"
        android:fontFamily="@font/poppins_medium"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_card_16dp"
        android:layout_marginBottom="24dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8">

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fadeScrollbars="true">

            <com.jetsynthesys.rightlife.ui.customviews.WeightPickerView
                android:id="@+id/pickerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </HorizontalScrollView>

        <View
            android:layout_width="4dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|top"
            android:background="#FF6B6B"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#E8E8E8"
        android:visibility="gone"
        android:padding="4dp">

        <Button
            android:id="@+id/btnKg"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="KG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnLbs"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="LBS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#FF6B6B"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/margin_card_16dp"/>

</LinearLayout>
