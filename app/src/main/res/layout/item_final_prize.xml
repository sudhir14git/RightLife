<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="180dp">

    <!-- Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_prize_card"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Final Prize"
            android:textColor="@color/txt_color_header"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="â‚¹30,000"
            android:textColor="@color/txt_color_header"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:text="Split Across\nContest Winners"
            android:textColor="@color/txt_color_header"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- GRAND Tag -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@drawable/bg_grand_tag"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="GRAND"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:textStyle="bold" />
</FrameLayout>
