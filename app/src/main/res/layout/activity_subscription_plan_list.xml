<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bg_color"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Arrow and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/merriweather_bold"
            android:text="Plans"
            android:textColor="@color/txt_color_mind"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_affirmation"
            android:visibility="visible" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plansRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomLayout"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/continueButton"
            android:text="Restore Subscription"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_yellow"
            android:backgroundTint="@color/menuselected"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancelButton"
            android:text="Cancel Subscription"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/menuselected"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/dmsans_regular" />

        <!-- Footer Links -->
        <LinearLayout
            android:id="@+id/llFooterLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_terms_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textSize="12sp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="#707070"
                android:paddingEnd="16dp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:fontFamily="@font/dmsans_bold"
                android:textSize="12sp"
                android:textColor="#707070"
                android:layout_marginStart="24dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
