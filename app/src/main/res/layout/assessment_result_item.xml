<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_margin="5dp"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="15dp">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAssessmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHQ-9"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/grey_info_icon" />
        </LinearLayout>

        <!-- Score Marker -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/lyt_score"
            android:layout_marginTop="12dp">

            <!-- Vertical line -->
            <View
                android:id="@+id/scoreLine"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <!-- Score Box -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Your Score: 7"
                android:textColor="@android:color/black"
                android:paddingHorizontal="5dp"
                android:paddingVertical="6dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/score_outline_bg"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- PHQ-9 Scale Layout -->
        <LinearLayout
            android:id="@+id/scoreScaleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView>