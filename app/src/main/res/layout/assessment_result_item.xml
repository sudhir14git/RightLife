<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_margin="5dp"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="15dp">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAssessmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHQ-9"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/grey_info_icon" />
        </LinearLayout>

        <!-- Score Marker -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_score"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp">

            <!-- Vertical line -->
            <View
                android:id="@+id/scoreLine"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <!-- Score Box -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Your Score: 7"
                android:textColor="#D9994C"
                android:paddingHorizontal="5dp"
                android:paddingVertical="6dp"
                android:layout_gravity="top|right"
                android:fontFamily="@font/dmsans_semibold"
                android:background="@drawable/score_outline_bg"
                android:textSize="11sp" />
        </FrameLayout>

        <!-- PHQ-9 Scale Layout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
        <LinearLayout
            android:id="@+id/scoreScaleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/endValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="end|top"
            android:textSize="8dp"
            android:visibility="gone"
            android:paddingEnd="5dp"
            android:text="27"
        />

            <ImageView
                android:id="@+id/scoreScaleImage"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mind_ohq" />
    </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>