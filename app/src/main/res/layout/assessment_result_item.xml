<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="15dp">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAssessmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHQ-9"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:visibility="gone"
                android:src="@drawable/grey_info_icon" />
        </LinearLayout>

        <!-- Score Marker -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_score"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp">

            <!-- Vertical line -->
            <View
                android:id="@+id/scoreLine"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray" />

            <!-- Score Box -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Your Score: 7"
                android:textColor="#D9994C"
                android:paddingHorizontal="5dp"
                android:paddingVertical="6dp"
                android:layout_gravity="top|right"
                android:fontFamily="@font/dmsans_semibold"
                android:background="@drawable/score_outline_bg"
                android:textSize="11sp" />
        </FrameLayout>

        <!-- PHQ-9 Scale Layout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
        <LinearLayout
            android:id="@+id/scoreScaleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/endValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="end|top"
            android:textSize="8dp"
            android:visibility="gone"
            android:paddingEnd="5dp"
            android:text="27"
        />
            <androidx.cardview.widget.CardView
                android:id="@+id/new_score_layout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                card_view:cardBackgroundColor="@color/dotted_red"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mind_audit_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dipression"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/dmsans_bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/mind_audit_scale_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mild"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:fontFamily="@font/dmsans_bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/mind_audit_scale"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        card_view:cardCornerRadius="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="3dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:layout_constraintEnd_toEndOf="parent"
                       card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/score_result_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:text="2"
                                android:fontFamily="@font/dmsans_bold"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent"
                                card_view:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:id="@+id/scoreScaleImage"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mind_ohq" />
    </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>