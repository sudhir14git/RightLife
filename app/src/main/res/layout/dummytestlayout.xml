<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/rl_rightlife_edit"
        android:layout_height="wrap_content">
        <!--right life edit section-->
        <TextView
            android:id="@+id/tv_header_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/textsize_extralarge"
            android:fontFamily="@font/merriweather_bold"
            android:text="The RightLife Edit"
            android:textColor="#0B1215"
            android:textSize="@dimen/textsize_extralarge" />

        <TextView
            android:id="@+id/tv_description_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_health"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Discover curated content to help you thrive."
            android:textColor="#0B1215"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical">


                <!-- Image Section with Overlay Tag -->
                <RelativeLayout
                    android:id="@+id/relative_rledit1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <!-- Image Background -->
                    <ImageView
                        android:id="@+id/img_rledit"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/img_rledittop" />

                    <!-- Workshop Tag on Top of Image -->
                    <ImageView
                        android:id="@+id/img_contenttype_rledit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:src="@drawable/read" />
                    <LinearLayout
                        android:id="@+id/ll_contet_type_rledit"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:padding="6dp"
                        android:backgroundTint="#BF000000"
                        android:background="#BF000000">

                        <ImageView
                            android:id="@+id/img_iconview_rledit"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/video_jump_back_in" />

                        <TextView
                            android:id="@+id/item_text_rledit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="video"
                            android:textColor="@color/white"
                            android:fontFamily="@font/dmsans_regular"
                            android:textSize="12sp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_rledt_cont_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/merriweather_bold"
                    android:text="5 best exercises to strengthen arthritic knees with physical therapy physical therapy physical thera"
                    android:textAlignment="textStart"
                    android:textColor="#0B1215"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="@dimen/textsize_large" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nameeditor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:text="Ventak swami muthu s…"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:textAlignment="textStart"
                        android:textColor="#0B1215"
                        android:textSize="@dimen/textsize_small"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/eyeicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/nameeditor"
                        android:src="@drawable/ic_eye" />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/eyeicon"
                        android:fontFamily="@font/dmsans_regular"
                        android:paddingEnd="25dp"
                        android:text="243"
                        android:textColor="#0B1215"
                        android:textSize="@dimen/textsize_extrasmall" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginHorizontal="10dp"/>

                <RelativeLayout
                    android:id="@+id/relative_rledit2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornerbutton"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight=".5">

                            <ImageView
                                android:id="@+id/img_rledit1"
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/img_logintop1" />
                            <LinearLayout
                                android:id="@+id/ll_contet_type_rledit1"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:padding="6dp"
                                android:backgroundTint="#BF000000"
                                android:background="@drawable/roundedcornerbottomshape">

                                <ImageView
                                    android:id="@+id/img_iconview_rledit1"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/video_jump_back_in" />

                                <TextView
                                    android:id="@+id/item_text_rledit1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="video"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/dmsans_regular"
                                    android:textSize="12sp"
                                    android:layout_marginStart="6dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight=".4">

                            <TextView
                                android:id="@+id/tv_rledt_cont_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="The think right Show: Viap- asana Meditation"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textAlignment="textStart"
                                android:textColor="#0B1215"
                                android:textSize="@dimen/textsize_medium"
                                tools:ignore="RtlCompat" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:id="@+id/nameeditor1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/dmsans_regular"
                                    android:text="Ventak swami muthu "
                                    android:maxLength="16"
                                    android:ellipsize="end"
                                    android:textAlignment="textStart"
                                    android:textColor="#0B1215"
                                    android:textSize="@dimen/textsize_extrasmall"
                                    android:textStyle="normal" />

                                <ImageView
                                    android:id="@+id/eyeicon1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/nameeditor1"
                                    android:src="@drawable/ic_eye" />

                                <TextView
                                    android:id="@+id/count1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_vertical"
                                    android:layout_toRightOf="@+id/eyeicon1"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingEnd="25dp"
                                    android:text="243"
                                    android:textColor="#0B1215"
                                    android:textSize="@dimen/textsize_extrasmall" />
                            </RelativeLayout>

                            <!--<TextView
                                android:layout_width="match_parent"
                                android:layout_weight=".5"
                                android:textColor="#121212"
                                android:text="Ventak swami muthu s…"
                                android:textSize="@dimen/textsize_extrasmall"
                                android:gravity="center"
                                android:textAlignment="textStart"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="10dp"
                                android:layout_toLeftOf="@+id/viewcount"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/viewcount"
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_eye"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="12dp"
                                android:layout_height="wrap_content"/>-->
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginHorizontal="10dp"/>
                <!--story2 -->
                <RelativeLayout
                    android:id="@+id/relative_rledit3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornerbutton"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight=".5">

                            <ImageView
                                android:id="@+id/img_rledit2"
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/img_rledit2" />
                            <LinearLayout
                                android:id="@+id/ll_contet_type_rledit2"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:padding="6dp"
                                android:backgroundTint="#BF000000"
                                android:background="@drawable/roundedcornerbottomshape">

                                <ImageView
                                    android:id="@+id/img_iconview_rledit2"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/video_jump_back_in" />

                                <TextView
                                    android:id="@+id/item_text_rledit2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="video"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/dmsans_regular"
                                    android:textSize="12sp"
                                    android:layout_marginStart="6dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight=".4">

                            <TextView
                                android:id="@+id/tv_rledt_cont_title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="5 best exercises to streng- then arthritic knees with physical therapy physical therapy physical thera"
                                android:textAlignment="textStart"
                                android:maxLines="2"
                                android:ellipsize="marquee"
                                android:textColor="#0B1215"
                                android:textSize="@dimen/textsize_medium"
                                tools:ignore="RtlCompat" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="1dp">

                                <TextView
                                    android:id="@+id/nameeditor2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/dmsans_regular"
                                    android:text="Ventak swami muthu  "
                                    android:maxLength="16"
                                    android:ellipsize="end"
                                    android:textAlignment="textStart"
                                    android:textColor="#0B1215"
                                    android:textSize="@dimen/textsize_extrasmall"
                                    android:textStyle="normal" />

                                <ImageView
                                    android:id="@+id/eyeicon2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/nameeditor2"
                                    android:src="@drawable/ic_eye" />

                                <TextView
                                    android:id="@+id/count2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/eyeicon2"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingEnd="25dp"
                                    android:text="243"
                                    android:textColor="#0B1215"
                                    android:textSize="@dimen/textsize_extrasmall" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--right life edit section End-->
    </LinearLayout>


</LinearLayout>