<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/thinkrightbanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/thinkrightbanner" />

        <TextView
            android:id="@+id/tv_header_thinkright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thinkrightbanner"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/thinkrightsvg"
            android:drawablePadding="10dp"
            android:drawableTint="#984C00"
            android:fontFamily="@font/merriweather_bold"
            android:gravity="start"
            android:text="ThinkRight"
            android:textColor="#984C00"
            android:textSize="@dimen/textsize_extralarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description_thinkright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_thinkright"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/dmsans_medium"
            android:gravity="start"
            android:text="Need to cultivate a positive mindset?"
            android:textColor="#984C00"
            android:textSize="@dimen/textsize_large"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_description_thinkright2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description_thinkright"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="start"
            android:text="Discover tools and techniques to shift your \nperspective."
            android:textColor="#984C00"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_description_thinkright2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_thinkright_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7F7F7"
                    android:backgroundTint="@color/bg_edittext"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_thinkright_category1"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundedcornerbutton"
                            android:backgroundTint="@color/thinkright"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageThinkRightCategory1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:src="@drawable/emotional" />

                            <TextView
                                android:id="@+id/tvThinkRightCategory1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".4"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="Positivity"
                                android:textAlignment="center"
                                android:textColor="#984C00"
                                android:textSize="@dimen/textsize_large" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_thinkright_category2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundedcornerbutton"
                            android:backgroundTint="#F7E6B7"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageThinkRightCategory2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:src="@drawable/stressmanagement" />

                            <TextView
                                android:id="@+id/tvThinkRightCategory2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="Stress\nManagement"
                                android:textAlignment="center"
                                android:textColor="#984C00"
                                android:textSize="@dimen/textsize_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_thinkright_category3"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundedcornerbutton"
                            android:backgroundTint="#F7E6B7"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageThinkRightCategory3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:src="@drawable/meditation" />

                            <TextView
                                android:id="@+id/tvThinkRightCategory3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="Meditation"
                                android:textAlignment="center"
                                android:textColor="#984C00"
                                android:textSize="@dimen/textsize_large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_thinkright_category4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundedcornerbutton"
                            android:backgroundTint="#F7E6B7"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageThinkRightCategory4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".6"
                                android:src="@drawable/thinkrightcoping" />

                            <TextView
                                android:id="@+id/tvThinkRightCategory4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:fontFamily="@font/merriweather_bold"
                                android:gravity="center"
                                android:text="Coping"
                                android:textAlignment="center"
                                android:textColor="#984C00"
                                android:textSize="@dimen/textsize_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_tr_explore"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#F7E6B7"
                        android:fontFamily="@font/dmsans_bold"
                        android:text="Explore More"
                        android:textColor="@color/thinkright_text_color"
                        android:textSize="@dimen/textsize_medium" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>