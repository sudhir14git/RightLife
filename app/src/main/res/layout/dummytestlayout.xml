<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_description_moveright2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content"
            app:cardElevation="0dp">  <!-- Add this line -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_moveright_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_moveright_category1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornerbutton"
                        android:backgroundTint="#FFBFBD"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageMoveRightCategory1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:src="@drawable/ic_healthcam_logo" />

                        <TextView
                            android:id="@+id/tvMoveRightCategory1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".6"
                            android:fontFamily="@font/merriweather_bold"
                            android:gravity="center"
                            android:text="Movement"
                            android:textAlignment="center"
                            android:textColor="#B11414"
                            android:textSize="@dimen/textsize_large" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_moveright_categor2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornerbutton"
                        android:backgroundTint="#FFBFBD"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageMoveRightCategory2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:src="@drawable/ic_voicescan_logo" />

                        <TextView
                            android:id="@+id/tvMoveRightCategory2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:fontFamily="@font/merriweather_bold"
                            android:gravity="center"
                            android:text="Breathing"
                            android:textAlignment="center"
                            android:textColor="#B11414"
                            android:textSize="@dimen/textsize_large" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_moveright_category3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcornerbutton"
                        android:backgroundTint="#FFBFBD"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageMoveRightCategory3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_healthaudit_logo" />

                        <TextView
                            android:id="@+id/tvMoveRightCategory3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/merriweather_bold"
                            android:gravity="center"
                            android:text="Yoga"
                            android:textAlignment="center"
                            android:textColor="#B11414"
                            android:textSize="@dimen/textsize_large" />

                    </LinearLayout>

                    

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_mr_explore"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FDD3D2"
            android:fontFamily="@font/dmsans_bold"
            android:gravity="center"
            android:text="Expore More"
            android:textColor="#B11414"
            android:textSize="@dimen/textsize_medium" />
    </LinearLayout>


</LinearLayout>