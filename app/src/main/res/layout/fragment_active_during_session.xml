<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How long are you usually active during a session?"
        android:textSize="18sp"
        android:fontFamily="@font/dmsans_bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/menu_icon_color_unselected" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroll to select."
        android:textSize="14sp"
        android:fontFamily="@font/dmsans_regular"
        android:textColor="@color/txt_color_header"
        android:textAlignment="center"
        android:layout_margin="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_wrapSelectorWheel="false"
            app:np_itemSpacing="0dp"
            app:np_dividerColor="@color/dark_red"
            app:np_formatter=""
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/black"
            app:np_selectedTextSize="20sp"
            app:np_textColor="@color/black"
            app:np_textSize="16sp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:layout_centerVertical="true"
            app:np_value="6" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="36dp"
            android:backgroundTint="@color/menuselected"
            android:fontFamily="@font/dmsans_bold"
            android:text="@string/str_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>