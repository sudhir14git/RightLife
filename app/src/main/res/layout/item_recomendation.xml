<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recommended_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="82dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="82dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/thumbnailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_gallry"
                android:background="@drawable/rounded_white_image_bg"
                android:contentDescription="Thumbnail" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="#BF000000" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center">
                <ImageView
                    android:id="@+id/overlayIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:id="@+id/bottomText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/overlayIcon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--<ImageView
                android:id="@+id/overlayIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                 />

            <TextView
                android:id="@+id/bottomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textAllCaps="true" />-->

        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moduleNameImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/think_eye_with_bg" />
            <TextView
                android:id="@+id/topicTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="ThinkRight   |   "
                android:textColor="@color/black"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp" />

                <ImageView
                    android:id="@+id/image_recommended"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/think_tag" />

                <TextView
                    android:id="@+id/topicTag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Meditation"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="The Personal Nature of Meaning"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="@color/black_no_meals"
                android:textSize="14sp"
                android:paddingTop="0dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/authorText"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="AshmithaVishnu   |   30"
            android:textSize="12sp"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginStart="15dp"
            android:textColor="@color/black_no_meals"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/authorText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/recommendationText"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/authorText2"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="ghh"
            android:paddingStart="12dp"
            android:textSize="10sp"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginStart="5dp"
            android:textColor="@color/recommendationText"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/authorText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/recommendationText"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:id="@+id/authorText4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="fhf"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="10sp"
            android:paddingStart="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/recommendationText"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_line"
        android:background="@color/view_border"/>
</LinearLayout>