<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How have your emotions been over the past week?"
        android:textSize="18sp"
        android:fontFamily="@font/dmsans_bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/menu_icon_color_unselected" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/chaotic_bg_card"
        app:cardElevation="8dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaotic"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <!-- White Box -->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:background="@android:color/transparent">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:lottie_fileName="data.json"
                    app:lottie_autoPlay="true"
                    android:scaleType="centerCrop"

                    app:lottie_loop="true" />
            </androidx.cardview.widget.CardView>

            <!-- SeekBar -->
            <RelativeLayout
                android:id="@+id/parentRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seekbar_bg_tr_q1"
                android:backgroundTint="@color/red"
                android:layout_marginTop="30dp"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/outerLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:weightSum="4">

                    <!-- Block 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:gravity="end"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/white" />
                    </LinearLayout>

                    <!-- Block 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/white" />
                    </LinearLayout>

                    <!-- Block 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="@color/white" />
                    </LinearLayout>

                    <!-- Block 4 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="@drawable/circle_shape"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/white" />
                    </LinearLayout>

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:max="4"
                    android:progress="0"
                    android:thumbTint="@android:color/white"
                    android:thumb="@drawable/custom_thumb_small"
                    android:progressTint="@android:color/transparent"
                    android:progressBackgroundTint="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:splitTrack="false" />

            </RelativeLayout>


            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide the scale to select level."
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/menuselected"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>
