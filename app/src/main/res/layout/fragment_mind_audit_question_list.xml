<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="center"
        android:background="@color/soft_beige"
        android:padding="16dp"
        android:text="Do any of your direct blood relatives currently have or have had medical conditions from the same below?"
        android:textColor="@color/txt_color_health"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/txt_question"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_question_desc"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="Choose any one option"
            android:layout_marginTop="30dp"
            android:textColor="#A0A3BD"
            android:fontFamily="@font/dmsans_medium"
            android:textSize="@dimen/textsize_medium"
            android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>