<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vertical_gradient_challenge">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ic_back_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"

            android:src="@drawable/ic_back_articlepage" />

        <TextView
            android:id="@+id/tv_header_htw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/merriweather_bold"
            android:textColor="@color/text_color_app"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Leaderboard"
            android:textSize="@dimen/textsize_large22sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ic_close_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/info_sleep_icon"
            android:backgroundTint="@color/black"
            android:visibility="gone" />
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/tabGroupNew"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_card_16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_card_16dp"
        android:background="@drawable/roundedcornerpinkborder"
        android:backgroundTint="@color/white_plain"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <RadioButton
            android:id="@+id/rbDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background_leaderboard"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="Day"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/text_color_app"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbWeek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background_leaderboard"
            android:button="@null"
            android:gravity="center"
            android:text="Week"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbAllTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_background_leaderboard"
            android:button="@null"
            android:gravity="center"
            android:text="All time"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RadioGroup>
    <!-- Segmented Tabs -->

    <TextView
        android:id="@+id/tvYourPositionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card_16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="@dimen/margin_card_16dp"
        android:text="Your Position"
        android:textSize="18sp"
        android:fontFamily="@font/dmsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/text_color_app"
        app:layout_constraintTop_toBottomOf="@id/tabGroupNew" />

    <!-- Your position pinned -->
    <include
        android:id="@+id/includeMyPosition"
        layout="@layout/user_rank_row"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="@dimen/margin_card_16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_card_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvYourPositionTitle" />

    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_card_16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="@dimen/margin_card_16dp"
        android:text="Top 10"
        android:textSize="18sp"
        android:textColor="@color/text_color_app"
        android:fontFamily="@font/dmsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeMyPosition" />

    <!-- Only this scrolls -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/margin_card_16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTopTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
