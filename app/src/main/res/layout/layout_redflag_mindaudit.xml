<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_back"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Red Flag Alert"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <!-- Main content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Message text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you or someone you know is struggling, help is just a call away. You're not alone."
                android:textSize="16sp"
                android:textColor="#424242"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reach out to these helplines."
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Decorative triangles -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">



                <View
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/img_redflag"
                    android:layout_marginStart="8dp" />



            </LinearLayout>

            <!-- National Helpline Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corder_border_gray_radius_small"
                    android:backgroundTint="@color/dark_red"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="National Helpline"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="India"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/light_red"
                        android:background="@drawable/rounded_corder_border_gray_radius_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+91 9999666555"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Call"
                            android:src="@drawable/ic_phone_receiver" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- State Helpline Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corder_border_gray_radius_small"
                    android:backgroundTint="@color/dark_red">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="State Helpline"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gujarat"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Location and timing -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/toproundedcornershape"
                        android:backgroundTint="@color/medium_red"
                        android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="@dimen/textsize_small"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saath,\nAhmedabad"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily: 1pm to 7pm"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Phone numbers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/phone_number_bg"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+91 79 26305544"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#424242" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone_receiver" />
                            android:contentDescription="Call" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+91 79 26300222"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#424242" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone_receiver" />
                            android:contentDescription="Call" />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/toproundedcornershape"
                            android:backgroundTint="@color/light_red"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Jeevan Aastha\nhelpline, Gandhinagar"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24x7"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.9" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/phone_number_bg"
                                android:padding="16dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1800 233 3330"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#424242" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_phone_receiver" />
                                android:contentDescription="Call" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 24x7 helpline -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remember, there's always someone ready to listen and support you.\nYour well-being matters."
                android:textSize="14sp"
                android:textColor="#424242"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="24dp" />

            <!-- I'm fine button -->
            <Button
                android:id="@+id/btn_im_fine"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="I'm fine"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/dark_red"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>