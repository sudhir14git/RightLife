<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/lyt_meal_item"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_dish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/green_circle" />

        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Poha"
            android:textSize="16sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/black_no_meals"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/image_dish"
            app:layout_constraintEnd_toStartOf="@id/image_right_arrow"
            app:layout_constraintTop_toTopOf="@id/image_dish"
            app:layout_constraintBottom_toBottomOf="@id/image_dish" />

        <ImageView
            android:id="@+id/image_right_arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_dish"
            app:layout_constraintBottom_toBottomOf="@id/image_dish"
            android:src="@drawable/right_arrow_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/view_border"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"/>

</LinearLayout>