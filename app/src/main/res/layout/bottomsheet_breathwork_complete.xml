<!-- res/layout/bottom_sheet_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_bottom_sheet2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/gray_light_bg"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDialogClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_breathwork"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:fontFamily="@font/merriweather_bold"
        android:layout_gravity="center_horizontal"
        android:text="How do you feel after \nthe exercise?"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_margin="@dimen/margin_card_16dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:layout_gravity="center"
        android:text="Are you sure you want to delete? This cannot be undone."
        android:textColor="@color/txt_color_header"
        android:visibility="gone"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btnBetter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Better Than Before"
        android:gravity="center"
        android:fontFamily="@font/dmsans_regular"
        android:textSize="@dimen/textsize_large18sp"
        android:textColor="@color/text_color_app"
        android:background="@drawable/rounded_corder_border_gray_radius_small" />

    <TextView
        android:id="@+id/btnSame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Same As Before"
        android:gravity="center"
        android:fontFamily="@font/dmsans_regular"
        android:textSize="@dimen/textsize_large18sp"
        android:textColor="@color/text_color_app"
        android:background="@drawable/rounded_corder_border_gray_radius_small"

        />

    <TextView
        android:id="@+id/btnWorse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Worse Than Before"
        android:gravity="center"
        android:fontFamily="@font/dmsans_regular"
        android:textSize="@dimen/textsize_large18sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corder_border_gray_radius_small" />

</LinearLayout>
