<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/roundedcornershape"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitting?"
        android:fontFamily="@font/merriweather_bold"
        android:textSize="22sp"
        android:textColor="@color/txt_color_header"
        android:layout_toEndOf="@id/leftImage"
        android:layout_marginHorizontal="8dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/dmsans_regular"
        android:layout_marginTop="16dp"
        android:textColor="@color/txt_color_header"
        android:textAlignment="center"
        android:text="Are you sure you want to quit\nMind Audit?" />

    <Button
        android:id="@+id/dialog_button_stay"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="I,ll Stay"
        android:backgroundTint="@color/btn_color_journal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="@dimen/textsize_small"
        android:textColor="@color/text_color_breathwork"
        android:fontFamily="@font/dmsans_bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_button_exit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Quit"
        android:backgroundTint="@color/white"
        android:textSize="@dimen/textsize_small"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="24dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:strokeColor="@color/text_color_breathwork"
        app:strokeWidth="1dp"
        android:textColor="@color/text_color_breathwork"
        android:fontFamily="@font/dmsans_bold" />
</LinearLayout>
