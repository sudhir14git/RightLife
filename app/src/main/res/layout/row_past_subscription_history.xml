<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:id="@+id/img_download"
            android:src="@drawable/ic_download_pastsub" />


        <TextView
            android:id="@+id/tvPlanAmmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/gray_past_price"
            android:layout_marginEnd="@dimen/margin_card_16dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/img_download"
            android:fontFamily="@font/dmsans_bold"
            android:paddingVertical="4dp"
            />

        <TextView
            android:id="@+id/planName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Plan"

            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/txt_color_mind"
            android:layout_alignParentStart="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/planDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planName"
            android:text="First 14 days free Â· XXX/month"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/text_color_char_left"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trialEnds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planDescription"
            android:text="Trial ends on ##-##-##"
            android:textColor="@color/text_color_char_left"
            android:textSize="12sp"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
             />

    </RelativeLayout>

</androidx.cardview.widget.CardView>