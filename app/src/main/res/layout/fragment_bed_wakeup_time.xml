<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What time do you usually go to bed and wake up?"
            android:textSize="@dimen/textsize_large18sp"
            android:fontFamily="@font/merriweather_bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/menu_icon_color_unselected" />

        <!-- Bedtime Label -->
        <TextView
            android:id="@+id/tvBedtimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedtime:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Bedtime TimePicker -->
        <TimePicker
            android:id="@+id/timePickerBedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="16dp"
            android:theme="@style/TimePickerTheme"
            android:layout_gravity="center" />

        <!-- Wake Time Label -->
        <TextView
            android:id="@+id/tvWakeTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake Time:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Wake Time TimePicker -->
        <TimePicker
            android:id="@+id/timePickerWakeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:theme="@style/TimePickerTheme"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <!-- Sleep Duration -->
        <TextView
            android:id="@+id/tvSleepDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep duration: 9 hrs 30 mins"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/menuselected"
            android:fontFamily="@font/dmsans_bold"
            android:text="@string/str_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:layout_alignParentBottom="true" />

    </LinearLayout>
</ScrollView>
