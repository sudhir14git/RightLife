<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_card_16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/merriweather_bold"
            android:text="What time do you usually go to bed and wake up?"
            android:textColor="@color/menu_icon_color_unselected"
            android:textSize="@dimen/textsize_large18sp" />

        <!-- Bedtime Label -->
        <TextView
            android:id="@+id/tvBedtimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_sleep_bad"
            android:drawablePadding="@dimen/margin_card_16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Bedtime:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Bedtime TimePicker -->
        <TimePicker
            android:id="@+id/timePickerBedtime"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:theme="@style/TimePickerTheme"
            android:timePickerMode="spinner" />

        <!-- Wake Time Label -->
        <TextView
            android:id="@+id/tvWakeTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_sleep_clock"
            android:drawablePadding="@dimen/margin_card_16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Wake Time:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Wake Time TimePicker -->
        <TimePicker
            android:id="@+id/timePickerWakeTime"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:theme="@style/TimePickerTheme"
            android:timePickerMode="spinner" />

    </LinearLayout>

    <!-- Sleep Duration -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/btn_continue">

        <TextView
            android:id="@+id/tvSleepDuration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="Sleep duration: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSleepDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_bold"
            android:text="9 hrs 30 mins"
            android:textColor="#1292E5"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="36dp"
        android:backgroundTint="@color/menuselected"
        android:fontFamily="@font/dmsans_bold"
        android:text="@string/str_continue"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_large18sp" />
</RelativeLayout>
