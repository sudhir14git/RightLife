<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How often do you find yourself overthinking?"
            android:textSize="@dimen/textsize_large18sp"
            android:fontFamily="@font/merriweather_bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/menu_icon_color_unselected" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide the scale to select."
            android:textSize="14sp"
            android:fontFamily="@font/dmsans_regular"
            android:textColor="@color/txt_color_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Never"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_above="@+id/rl_triangle"
                android:layout_centerInParent="true"
                android:fontFamily="@font/dmsans_bold" />

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_centerInParent="true"
                android:id="@+id/rl_triangle"
                android:gravity="center_horizontal"
                android:layout_height="300dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="290dp"
                    android:layout_height="290dp"
                    app:cardElevation="1dp">

                    <com.jetsynthesys.rightlife.quiestionscustomviews.TriangleView
                        android:id="@+id/triangleView"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>


                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:layout_alignParentBottom="true"
                    android:thumb="@drawable/custom_thumb"
                    android:elevation="5dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginBottom="-1dp"
                    android:progress="0" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_triangle"
                android:text="Time"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textsize_medium"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dmsans_medium"
                />

            <TextView
                android:id="@+id/tvOverthinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overthinking"
                android:textSize="@dimen/textsize_medium"
                android:layout_centerVertical="true"
                android:rotation="270"
                android:visibility="gone"
                android:fontFamily="@font/dmsans_medium"
                />
            <ImageView
                android:layout_width="35dp"
                android:id="@+id/img_ovrerthinking"
                android:src="@drawable/img_overthinking"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/rl_triangle"
                android:scaleType="fitXY"
                android:layout_marginEnd="6dp"
                android:layout_height="110dp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp">


        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/menuselected"
            android:fontFamily="@font/dmsans_bold"
            android:text="@string/str_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large18sp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>
