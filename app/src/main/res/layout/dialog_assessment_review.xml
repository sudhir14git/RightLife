<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/record_emotion_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Clinical Assessments"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_weight="8"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/img_ideal_sleep"
            android:layout_width="240dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:src="@drawable/mind_audit"
            />
        <TextView
            android:text="Understanding Clinical Assessments in RightLife"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <!-- Image 1 -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:src="@drawable/image" />

            <!-- Image 2 -->
            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="24dp"
                android:src="@drawable/image" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Overview Text -->
        <TextView
            android:text="RightLife includes six clinically validated assessments to help you track your mental health and sleep quality. These assessments provide insights into depression, anxiety, stress, anger, happiness, and sleep disorders."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Each assessment is scientifically backed, quick to complete, and helps you understand patterns in your well-being over time."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Begin Assessments -->
        <!-- PHQ-9 -->
        <TextView
            android:text="1. PHQ-9: Depression Screening"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <!-- GAD-7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
