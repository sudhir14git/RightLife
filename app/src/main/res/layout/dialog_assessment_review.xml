            android:textSize="14sp" />

        <TextView
            android:text="2. GAD-7: Anxiety Screening"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="Evaluates symptoms of generalized anxiety disorder (GAD).\nâ€¢ Total Score Range: 0â€“21\nâ€¢ Categories: Minimal (0â€“4), Mild (5â€“9), Moderate (10â€“14), Severe (15â€“21)\nâ€¢ Why it matters: Consistently high scores may indicate persistent anxiety.\nðŸ“Œ Tip: Pair this with breathing practices and journaling to manage anxiety."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- DASS-21 -->
        <TextView
            android:text="3. DASS-21: Depression, Anxiety, and Stress Scale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="Comprehensive screening for:\nâ€¢ Depression\nâ€¢ Anxiety\nâ€¢ Stress\nâ€¢ Why it matters: DASS-21 provides a broad view of emotional distress.\nðŸ“Œ Tip: Use DASS-21 when you want detailed mental health analysis."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Clinical Anger Scale -->
        <TextView
            android:text="4. Clinical Anger Scale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="Evaluates intensity and frequency of anger.\nâ€¢ Total Score Range: 0â€“63\nâ€¢ Why it matters: Chronic anger can harm your mental and physical health.\nðŸ“Œ Tip: High scores suggest relaxation techniques, exercise, or therapy may help."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Oxford Happiness Questionnaire -->
        <TextView
            android:text="5. Oxford Happiness Questionnaire"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="Measures overall happiness and life satisfaction.\nâ€¢ Total Score Range: 0â€“6 (higher = more happiness)\nâ€¢ Why it matters: Tracking happiness helps identify positive patterns.\nðŸ“Œ Tip: Use gratitude and joyful activities to improve scores."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- RightLife Sleep Audit -->
        <TextView
            android:text="6. RightLife Sleep Audit"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="Evaluates key sleep concerns:\n1âƒ£ Excessive Daytime Sleepiness\n2âƒ£ Insomnia\n3âƒ£ Sleep Apnea\n4âƒ£ Tiredness\nâ€¢ Why it matters: Poor sleep affects physical and mental health.\nðŸ“Œ Tip: Adjust your sleep schedule and environment for better rest."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Footer -->
        <TextView
            android:text="How to Use Your Results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />
        <TextView
            android:text="â€¢ Check your trends: Take assessments twice a month.\nâ€¢ Take action: Use insights for better mental and physical health.\nâ€¢ Seek support: Consult a provider for consistently high scores.\n\nThese assessments empower you with meaningful insights. Use them regularly to improve your well-being."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />
        <Button
            android:id="@+id/got_it"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="GOT IT"
            android:backgroundTint="@color/eatright_text_color"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
