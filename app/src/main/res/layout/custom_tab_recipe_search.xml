<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootTabLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tab_background">

    <TextView
        android:id="@+id/tabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="9dp"
        android:paddingVertical="5dp"
        android:textSize="12sp"
        android:fontFamily="@font/dmsans_regular"
        android:textColor="@color/tab_color_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <TextView
        android:id="@+id/circleText"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_white_background"
        android:gravity="center"
        android:visibility="gone"
        android:text="1"
        android:textSize="10sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/dmsans_regular"
        app:layout_constraintStart_toEndOf="@id/tabText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:src="@drawable/ic_chevron_down"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleText"
        app:layout_constraintTop_toTopOf="@+id/circleText"
        app:layout_constraintBottom_toBottomOf="@+id/circleText"/>

</androidx.constraintlayout.widget.ConstraintLayout>