<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Icon Box -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:background="@drawable/yellow_curved_affirmation"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/quote_icon" />
        </FrameLayout>

        <!-- Text + Button Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Affirmation Playlist"
                android:textColor="@color/black_no_meals"
                android:textSize="18sp"
                android:fontFamily="@font/dmsans_semibold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create playlist &amp; practice affirmation playlist"
                android:textSize="12sp"
                android:textColor="@color/black_no_meals"
                android:fontFamily="@font/dmsans_regular"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createPlaylistButton"
                android:layout_width="115dp"
                android:layout_height="23dp"
                android:text="Create Playlist"
                android:textSize="10sp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/eatright_text_color"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAllCaps="false"
                android:paddingEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/yellow_round_bg" />
        </LinearLayout>
    <ImageView
        android:id="@+id/tool_select_button_affirmation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/add_think_brown_icon"/>
    </LinearLayout>