<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_thinkright_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/roundedcornerbutton_light_pink"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_suggested_assessment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_mindau_low" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_suggested_assessment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="DASS-21   "
            android:layout_margin="10dp"
            android:textColor="@color/txt_color_header"
            android:textSize="@dimen/textsize_medium" />
            <TextView
                android:id="@+id/tv_suggested_assessment_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/roundedcornerbottomshape"
                android:fontFamily="@font/dmsans_regular"
                android:text="Measures the severity of depression, anxiety, and stress symptoms."
                android:textColor="@color/txt_color_header"
                android:textSize="@dimen/textsize_medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>