<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_above="@id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/margin_card_16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifestyle &amp; Nutrition Assessment"
                android:textSize="24sp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="@color/txt_color_mind" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:src="@drawable/mr_er1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorie &amp; Macro Goals"
                        android:textSize="18sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_bold"
                        android:textColor="@color/txt_color_journal_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get calorie, macro, hydration goals tailored to your lifestyle."
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:textColor="@color/txt_color_journal_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mr_er2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smarter Activity Factor"
                        android:textSize="18sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_bold"
                        android:textColor="@color/txt_color_journal_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We adjust your TDEE using your actual movement habits."
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:textColor="@color/txt_color_journal_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mr_er3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food &amp; Fitness That Fit You"
                        android:textSize="18sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_bold"
                        android:textColor="@color/txt_color_journal_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your answers guide personalized nutrition and workout tracking."
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:textColor="@color/txt_color_journal_date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mr_er4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Thatâ€™s Truly Yours"
                        android:textSize="18sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_bold"
                        android:textColor="@color/txt_color_journal_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your goals, your pace - no defaults, just precision-built insights."
                        android:textSize="14sp"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/dmsans_regular"
                        android:textColor="@color/txt_color_journal_date" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="30dp">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/menuselected" />

    </LinearLayout>

</RelativeLayout>