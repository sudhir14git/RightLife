<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="5dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_checklist_tick_bg" />

        <LinearLayout
            android:id="@+id/llText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivStatus"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="@dimen/textsize_large18sp"
                android:textColor="@color/text_color_app"
                android:fontFamily="@font/dmsans_bold" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 09, 2026"
                android:textSize="14sp"
                android:textColor="@color/text_color_app"
                android:fontFamily="@font/dmsans_regular" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivFlameSmall"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_flame_small"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
