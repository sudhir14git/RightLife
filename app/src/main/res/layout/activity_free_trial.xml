<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btnBeginFreeTrial"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Trial Unlocked!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Credit Card Needed!"
                android:textSize="14sp"
                android:textColor="@color/txt_color_header"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Progress Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp">

                <!-- Step 1: Today -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_lock_freetrial"
                        android:background="@drawable/ic_uncheck_circle"
                        android:padding="10dp"
                        android:backgroundTint="#1292E5"
                        android:layout_marginEnd="16dp"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today:"
                            android:fontFamily="@font/dmsans_bold"
                            android:textColor="@color/txt_color_header"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unlock full access to all premium features."
                            android:textSize="14sp"
                            android:textColor="@color/txt_color_header" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Step 2: Day 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_lock_freetrial"
                        android:background="@drawable/ic_uncheck_circle"
                        android:padding="10dp"

                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day 5:"
                            android:fontFamily="@font/dmsans_bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get a notification reminder about the end of the free trial."
                            android:textSize="14sp"
                            android:textColor="@color/txt_color_header" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Step 3: Day 7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_lock_freetrial"
                        android:background="@drawable/ic_uncheck_circle"
                        android:padding="10dp"

                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day 7:"
                            android:fontFamily="@font/dmsans_bold"
                            android:textSize="16sp"
                            android:textColor="@color/txt_color_header" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick a plan and continue your access."
                            android:textSize="14sp"
                            android:textColor="@color/txt_color_header" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <!-- Privacy Policy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We follow the strictest data privacy standards to make sure your health is always in your hands."
                android:textSize="12sp"
                android:textColor="@color/txt_color_header"
                android:paddingBottom="16dp"
                android:layout_marginHorizontal="16dp"/>

            <!-- Notification Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_gray_border_radius_small"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Remind me when the free trial ends"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Testimonial Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_gray_border_radius_small"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“I love how RightLife integrates everything I need—affirmations, meal plans, and workouts—all in one place. It’s like having a personal wellness coach in my pocket!”"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/img_filled"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priya Menon"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvHtmlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Button -->
    <Button
        android:id="@+id/btnBeginFreeTrial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin My Free Trial"
        android:backgroundTint="@color/menuselected"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/llFooterLinks" />

    <!-- Footer Links -->
    <LinearLayout
        android:id="@+id/llFooterLinks"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_terms_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</RelativeLayout>
