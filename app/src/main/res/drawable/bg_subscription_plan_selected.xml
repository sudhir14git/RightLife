<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card Background Color -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded Corners -->
    <corners android:radius="12dp"/>

    <!-- Light Border to Simulate Elevation -->
    <stroke
        android:width="1dp"
        android:color="@color/menuselected" /> <!-- very light shadow -->

    <!-- Optional: subtle inner shadow using padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
