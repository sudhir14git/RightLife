<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Keep background transparent so stroke is visible -->
    <solid android:color="@android:color/white" />

    <!-- Border / stroke -->
    <stroke
        android:width="1.5dp"
        android:color="@color/menuselected" />

    <!-- Rounded corners -->
    <corners android:radius="25dp" />

    <!-- optional internal padding so text doesn't touch the border -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />
</shape>
